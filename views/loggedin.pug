doctype html
html
  head
    title CET CSE Placement Info
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.site-header.sticky-top.py-1
      .container.d-flex.flex-column.flex-md-row.justify-content-between
        a.py-2(href='/')
          svg.d-block.mx-auto(xmlns='http://www.w3.org/2000/svg', width='24', height='24', fill='none', stroke='currentColor', stroke-linecap='round', stroke-linejoin='round', stroke-width='2', role='img', viewBox='0 0 24 24', focusable='false')
            title CET Event Info
            circle(cx='12', cy='12', r='10')
            path(d='M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83m13.79-4l-5.74 9.94')
        
        a.py-2.d-none.d-md-inline-block(href='/') Home
        a.py-2.d-none.d-md-inline-block(href='/articles/add') Add Events
        a.py-2.d-none.d-md-inline-block(href='/users/logout') Logout
        a.py-2.d-none.d-md-inline-block(href='#') About
      
      
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
            div(class="alert alert-danger") #{error.msg}
      block content
            
        h1 #{title}
        each article, i in articles
          li.list-group-item
            a(href="/articles/"+article._id)= article.title
     
      block content
      br
      hr
      footer
        p Copyright &copy; 2019
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')  
    script(src='/js/main.js')  
